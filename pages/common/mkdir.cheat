% mkdir, common

# Create specific directories
mkdir <path_to_directory1 path_to_directory2 ...>

# Create specific directories and their [p]arents if needed
mkdir -p <path_to_directory1 path_to_directory2 ...>

# Create directories with specific permissions
mkdir -m <rwxrw-r--> <path_to_directory1 path_to_directory2 ...>
