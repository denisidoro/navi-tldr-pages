% puppet-apply, common

# Apply a manifest
puppet apply {{path/to/manifest}}

# Execute puppet code
puppet apply --execute {{code}}

# Use a specific module and hiera config file
puppet apply --modulepath {{path/to/directory}} --hiera_config {{path/to/file}} {{path/to/manifest}}
