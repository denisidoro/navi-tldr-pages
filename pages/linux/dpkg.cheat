% dpkg, linux

# Install a package
dpkg -i <path_to_file.deb>

# Remove a package
dpkg -r <package>

# List installed packages
dpkg -l <pattern>

# List a package's contents
dpkg -L <package>

# List contents of a local package file
dpkg -c <path_to_file.deb>

# Find out which package owns a file
dpkg -S <path_to_file>
