% unshadow, linux

# Combine the `/etc/shadow` and `/etc/passwd` of the current system
sudo unshadow /etc/passwd /etc/shadow

# Combine two arbitrary shadow and password files
sudo unshadow <path_to_passwd> <path_to_shadow>
